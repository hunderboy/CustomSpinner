<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="230dp"
    tools:context=".fragment.QuestionPainAfterExerciseFragment">


    <TextView
        android:id="@+id/question_pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Question_pain_after_exercise"
        android:gravity="center"
        android:textAppearance="@style/Qusetion_pain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:stepSize="1.0"
        android:valueFrom="0.0"

        android:valueTo="10.0"
        app:labelBehavior="floating"

        app:layout_constraintBottom_toTopOf="@+id/button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_pain"
        app:minSeparation="0dp"
        app:thumbColor="@color/colorIntro"

        app:tickColorActive="@color/colorIntro"
        app:tickColorInactive="@color/colorGrayTransperency"
        app:trackColorActive="@color/colorIntro"
        app:trackColorInactive="@color/colorGrayTransperency"
        app:trackHeight="8dp" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="다음"
        android:backgroundTint="@color/colorIndigo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/question_pain_killer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/evaluation_explaination"

        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"

        android:textAppearance="@style/explaination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>