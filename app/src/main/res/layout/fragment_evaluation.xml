<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="230dp"
    tools:context=".fragment.PainKillerFragment">



    <ImageButton
        android:id="@+id/imageButton_previous"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius_white_button"

        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/question_pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/Question_exercise_evaluation"
        android:gravity="center"
        android:textAppearance="@style/Qusetion_pain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_pain">

        <ImageButton
            android:id="@+id/imageButton_hard"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radius_white_button"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_evaluation_hard_black" />

        <ImageButton
            android:id="@+id/imageButton_normal"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radius_white_button"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_evaluation_normal_black" />

        <ImageButton
            android:id="@+id/imageButton_Easy"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radius_white_button"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_evaluation_easy_black" />

    </LinearLayout>


    <Button
        android:id="@+id/button_submit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorIndigo"
        android:layout_marginEnd="13dp"

        android:text="@string/submit"
        android:textSize="11dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <TextView
        android:id="@+id/question_pain_killer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/evaluation_explaination"

        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"

        android:textAppearance="@style/explaination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
