<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.ServiceActivity">


    <Spinner
        android:id="@+id/spinner_service"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:translationZ="10dp"
        android:elevation="10dp"
        android:background="@drawable/radius_white_button"
        android:popupBackground="@drawable/radius_white_button"
        android:spinnerMode="dropdown"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinner_service2"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_marginTop="100dp"

        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:elevation="10dp"
        android:translationZ="10dp"
        android:background="@drawable/radius_white_button"
        android:popupBackground="@drawable/radius_white_button"
        android:spinnerMode="dropdown"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_service" />

    <Button
        android:id="@+id/button_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="데이터 추출"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_service2" />



    <Spinner
        android:id="@+id/spinner_service_week"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:elevation="10dp"
        android:translationZ="10dp"
        android:background="@drawable/radius_white_button"
        android:popupBackground="@drawable/radius_white_button"
        android:spinnerMode="dropdown"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_data" />



    <Spinner
        android:id="@+id/spinner_service_day"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:elevation="10dp"
        android:translationZ="10dp"
        android:background="@drawable/radius_white_button"
        android:popupBackground="@drawable/radius_white_button"
        android:spinnerMode="dropdown"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_service_week" />


</androidx.constraintlayout.widget.ConstraintLayout>